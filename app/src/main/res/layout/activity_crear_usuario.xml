<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="3000dp"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="169dp"
            android:layout_height="164dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.132"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logop" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="197dp"
            android:layout_height="46dp"
            android:layout_alignParentEnd="false"
            android:layout_toEndOf="@+id/imageView"
            android:fontFamily="@font/knewave"
            android:text="Micro Delivery"
            android:textSize="70px"
            android:textColor="#FF47525E"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.938"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.485"
            android:backgroundTint="@color/white"/>


        <View

            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="30dp"
            android:background="@android:color/black"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:backgroundTint="#5A6978"
            tools:layout_editor_absoluteX="-16dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/caja_misitio"
            android:fontFamily="@font/kanitb"
            android:gravity="center"
            android:text="Crear Usuario"
            android:textColor="#5A6978"
            android:textSize="50px"
            android:padding="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="@+id/view2"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <ImageView
            android:id="@+id/fotousuario"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/usuario1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:background="@drawable/caja_fotousuario"/>

        <ImageButton
            android:id="@+id/btncamara"
            android:layout_width="68dp"
            android:layout_height="87dp"
            android:layout_marginTop="88dp"
            android:background="@android:color/transparent"
            android:contentDescription="Foto"
            android:src="@drawable/camarabtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.646"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view2" />
        <LinearLayout
            android:id="@+id/llcuenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/fotousuario"
            tools:layout_editor_absoluteX="0dp">

            <TextView
                android:id="@+id/tvcuenta"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:background="@drawable/caja_misitio"
                android:fontFamily="@font/kanit"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Usuario"
                android:textColor="#5A6978"
                android:textSize="50px"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fotousuario" />

            <EditText
                android:id="@+id/edcuenta"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/caja_crearusuarioreg"
                android:fontFamily="@font/kanit"
                android:hint="Ingrese Usuario"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textSize="50px"
                android:textColor="#979da0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/textView3"
                app:layout_constraintTop_toBottomOf="@+id/fotousuario" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/llcuenta"
            tools:layout_editor_absoluteX="0dp">

            <TextView
                android:id="@+id/tvpass"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:background="@drawable/caja_misitio"
                android:fontFamily="@font/kanit"
                android:text="Contrase침a"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textSize="50px"
                android:textColor="#5A6978"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fotousuario" />

            <EditText
                android:id="@+id/edpass"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/caja_crearusuarioreg"
                android:fontFamily="@font/kanit"
                android:hint="Ingrese Contrase침a"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textSize="50px"
                android:textColor="#979da0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/textView3"
                app:layout_constraintTop_toBottomOf="@+id/fotousuario" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llnombres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/llpass"
            tools:layout_editor_absoluteX="0dp">

            <TextView
                android:id="@+id/tvnombres"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:background="@drawable/caja_misitio"
                android:fontFamily="@font/kanit"
                android:text="Nombres"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textSize="50px"
                android:textColor="#5A6978"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fotousuario" />

            <EditText
                android:id="@+id/ednombres"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/caja_crearusuarioreg"
                android:fontFamily="@font/kanit"
                android:hint="Ingrese sus Nombres"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textSize="50px"
                android:textColor="#979da0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/textView3"
                app:layout_constraintTop_toBottomOf="@+id/fotousuario" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llapellidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/llnombres"
            tools:layout_editor_absoluteX="0dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:background="@drawable/caja_misitio"
                android:fontFamily="@font/kanit"
                android:text="Apellidos"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textSize="50px"
                android:textColor="#5A6978"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <EditText
                android:id="@+id/edapellidos"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/caja_crearusuarioreg"
                android:hint="Ingrese sus Apellidos"
                android:fontFamily="@font/kanit"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textSize="50px"
                android:textColor="#979da0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/textView4"
                app:layout_constraintTop_toBottomOf="@+id/editText" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lldni"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/llapellidos"
            tools:layout_editor_absoluteX="-16dp">

            <TextView
                android:id="@+id/tvdni"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:background="@drawable/caja_misitio"
                android:fontFamily="@font/kanit"
                android:text="DNI"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textSize="50px"
                android:textColor="#5A6978"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <EditText
                android:id="@+id/eddni"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/caja_crearusuarioreg"
                android:fontFamily="@font/kanit"
                android:gravity="center_vertical"
                android:hint="Ingrese su DNI"
                android:paddingLeft="10dp"
                android:textColor="#979da0"
                android:textSize="50px"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/textView4"
                app:layout_constraintTop_toBottomOf="@+id/editText" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lltusuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/lldni"
            tools:layout_editor_absoluteX="0dp">

            <TextView
                android:id="@+id/txtusuario"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:background="@drawable/caja_misitio"
                android:fontFamily="@font/kanit"
                android:text="Tipo Usuario"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textSize="50px"
                android:textColor="#5A6978"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <Spinner
                android:id="@+id/spTipoUsuario"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/caja_sptipousuario"
                android:fontFamily="@font/kanit"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="#979da0"
                android:textSize="50px"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/textView4"
                app:layout_constraintTop_toBottomOf="@+id/editText" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lldistrito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/lltusuario"
            tools:layout_editor_absoluteX="-48dp">

            <TextView
                android:id="@+id/tvdistrito"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:background="@drawable/caja_misitio"
                android:fontFamily="@font/kanit"
                android:text="Distrito"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textSize="50px"
                android:textColor="#5A6978"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />
            <EditText
                android:id="@+id/eddistrito"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/caja_crearusuarioreg"
                android:fontFamily="@font/kanit"
                android:hint="Distrito de su domicilio"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textSize="50px"
                android:textColor="#979da0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/textView4"
                app:layout_constraintTop_toBottomOf="@+id/editText" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lldireccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/lldistrito"
            tools:layout_editor_absoluteX="0dp">

            <TextView
                android:id="@+id/tvdireccion"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:background="@drawable/caja_misitio"
                android:fontFamily="@font/kanit"
                android:text="Direcci칩n"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textSize="50px"
                android:textColor="#5A6978"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <EditText
                android:id="@+id/eddireccion"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/caja_crearusuarioreg"
                android:fontFamily="@font/kanit"
                android:hint="Ingrese su Direcci칩n"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textSize="50px"
                android:textColor="#979da0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/textView4"
                app:layout_constraintTop_toBottomOf="@+id/editText" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llcorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/lldireccion"
            tools:layout_editor_absoluteX="0dp">

            <TextView
                android:id="@+id/tvcorreo"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:background="@drawable/caja_misitio"
                android:fontFamily="@font/kanit"
                android:text="Correo"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textSize="50px"
                android:textColor="#5A6978"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvdireccion" />

            <EditText
                android:id="@+id/edcorreo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/caja_crearusuarioreg"
                android:fontFamily="@font/kanit"
                android:hint="Ingrese su Correo"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textSize="50px"
                android:textColor="#979da0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toBottomOf="@+id/editText" />

        </LinearLayout>

        <Button
            android:id="@+id/btncusuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:paddingHorizontal="30dp"
            android:text="CREAR"
            app:cornerRadius="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llcorreo" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>